<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/option_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_weight="1"
        android:layout_marginBottom="5dp">

    <TextView
        android:id="@+id/option_finish_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="옵션제목"
        android:fontFamily="@font/mainfont"
        android:textSize="21dp"/>

    <TextView
        android:id="@+id/option_finish_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="7dp"
        android:text="+1000원"
        android:textColor="#7A7A7A"
        android:fontFamily="@font/mainfont"
        android:textSize="22dp"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_marginBottom="7dp">

        <Button
            android:id="@+id/option_finish_remove"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/mainfont"
            android:background="@drawable/btn_style_5"
            android:text="삭제"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/btn_style_5"
            android:layout_height="32dp"
            android:layout_gravity="right|bottom">

            <Button
                android:id="@+id/option_finish_sub"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="#00FF0000"
                android:fontFamily="@font/mainfont"
                android:gravity="center"
                android:text="-"
                android:textSize="29dp" />

            <TextView
                android:id="@+id/option_finish_total"
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:gravity="center"
                android:textColor="#FF0000"
                android:fontFamily="@font/mainfont"
                android:textSize="27dp"/>

            <Button
                android:id="@+id/option_finish_add"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="#00FF0000"
                android:fontFamily="@font/mainfont"
                android:text="+"
                android:textSize="27dp" />

        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:src="@drawable/line_style_2"/>

</LinearLayout>